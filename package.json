{
  "name": "mes-journal-service",
  "version": "0.1.0",
  "author": "DVSA",
  "license": "MIT",
  "description": "A suite of Lambda functions for CRUD of driving test examiner journal entries",
  "homepage": "https://github.com/dvsa/mes-journal-service#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/mes-journal-service.git"
  },
  "bugs": {
    "url": "https://github.com/dvsa/mes-journal-service/issues"
  },
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf build artefacts",
    "compile": "tsc",
    "compile-no-emit": "tsc --noEmit -p .",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
    "package": "./package.sh",
    "security-scan": "git secrets --scan && git log -p | scanrepo",
    "start": "sls dynamodb install && sls offline start",
    "test": "npm run compile && jasmine",
    "test:jasmine-coverage": "nyc npm run test",
    "test:int": "npm run compile && jasmine build/spec/journal.spec.js",
    "vulnerability-check": "snyk test --severity-threshold=high"
  },
  "dependencies": {
    "aws-sdk": "^2.1384.0",
    "joi": "^17.9.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "@dvsa/mes-journal-schema": "^1.3.1",
    "@dvsa/mes-microservice-common": "0.8.3",
    "@dvsa/mes-test-schema": "3.41.1",
    "@types/aws-lambda": "^8.10.114",
    "@types/jasmine": "^4.3.1",
    "@types/node": "^16.14.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.40.1",
    "@typescript-eslint/parser": "^5.59.0",
    "aws-lambda-test-utils": "^1.3.0",
    "eslint": "^8.38.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "jasmine": "^4.6.0",
    "jasmine-spec-reporter": "^7.0.0",
    "lint-staged": "^13.2.1",
    "node.extend": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "serverless": "^3.30.1",
    "serverless-dotenv-plugin": "^4.0.2",
    "serverless-dynamodb-local": "^1.0.2",
    "serverless-offline": "^11.0.1",
    "serverless-webpack": "^5.10.0",
    "snyk": "^1.1143.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.4",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typemoq": "^2.1.0",
    "typescript": "^4.8.4",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.10.0",
    "yamljs": "^0.3.0"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "**/__mocks__/*",
      "**/__tests__/*"
    ],
    "exclude-after-remap": false,
    "sourceMap": true,
    "produce-source-map": true,
    "instrument": true
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "npm run lint:fix"
    ]
  }
}
